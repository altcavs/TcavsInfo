@{
    Layout = null;
}
<br />

<div class="container">
    <div class="col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
        <div class="panel panel-primary">
            <div class="panel-heading" style="font-size:large">
                <i class="fa fa-key fa-fw"></i>
                ТЦАВС ИНФО
            </div>
            <div class="padd">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="inputUser" class="col-sm-3 control-label">Пользователь</label>
                        <div class="col-sm-9">
                            <input class="form-control" id="inputUser" placeholder="Имя пользователя" ng-model="vm.user.username">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword" class="col-sm-3 control-label">Пароль</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="inputPassword" placeholder="Пароль" ng-model="vm.user.password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9 col-md-offset-3 col-md-9">
                            <button type="submit" ng-click="vm.login()" class="btn btn-primary">Вход</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
