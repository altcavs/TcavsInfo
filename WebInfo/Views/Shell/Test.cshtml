@{
    Layout = null;
}
<br/>
<div class="row">
    <div class="col-md-6">
        <form role="form">
            <div class="form-group">
                <label for="inputLogin">Login</label>
                <input class="form-control" id="inputLogin" placeholder="Enter login" ng-model="vm.user.username">
            </div>
            <div class="form-group">
                <label for="emailLogin">Email address</label>
                <input type="email" class="form-control" id="inputEmail" placeholder="Enter email" ng-model="vm.user.email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" ng-model="vm.user.password">
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" ng-model="vm.user.confirmPassword">
            </div>
            <button type="submit" class="btn btn-primary" ng-click="vm.register()">Регистрация</button>
        </form>
    </div>
    <div class="col-md-6">
        
            <form role="form" class="form-horizontal" ng-hide="vm.message">
                <div class=" form-group">
                    <label for="inputLogin">Login</label>
                    <input class="form-control" id="inputLogin" placeholder="Enter login" ng-model="vm.user.username">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" ng-model="vm.user.password">
                </div>
                <div>
                    <button type="submit" class="btn btn-primary" ng-click="vm.login()">Войти</button>
                    <button class="btn btn-primary" ng-click="vm.info()">Инфо</button>
                    <button class="btn btn-primary" ng-click="vm.logout()">Выход</button>
                    <button class="btn btn-primary" ng-click="vm.test()">Тест</button>

                </div>
                    <div ng-show="message">
                    <p class="lead" ng-bind="vm.message"></p>
                </div>
            </form>
        
    </div>
</div>


