@{
    Layout = null;
}

<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-heading clearfix">
                        <h1 class="panel-title">Вход</h1>
                    </div>
                </div>
                <div class="panel-body row">
                    <div class="col-sm-offset-2 col-sm-10">
                        <em class="text-muted">  </em>
                    </div>
                    <form role="form" class="form-horizontal" ng-hide="vm.message">
                        <div class=" form-group">
                            <label class="control-label col-sm-2" for="inputLogin">Login</label>
                            <input class="form-control col-sm-10" id="inputLogin" placeholder="Enter login" ng-model="vm.user.username">
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-md-2 control-label" for="exampleInputPassword">Password</label>
                            <input type="password" class="col-sm-10 col-md-10 form-control" id="exampleInputPassword" placeholder="Password" ng-model="vm.user.password">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary col-sm-offset-2" ng-click="vm.login()">Войти</button>
                        </div>
                        <div ng-show="message">
                            <p class="lead" ng-bind="vm.message"></p>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
 </div>
